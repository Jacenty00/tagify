{
"compilerOptions": {
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "typeRoots": [
        "types"
    ],
    "paths": {
        "~*": ["./*"]
    }
},
"include": [
    "app/frontend/**/*"
]
}
